<Window x:Name="winInput" x:Class="_7._2.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7._2"
        mc:Ignorable="d"
        Title="Input" Height="310" Width="238" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tbInput" HorizontalAlignment="Center" Margin="0,106,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Center" Margin="0,196,0,0" VerticalAlignment="Top" Click="btnOK_Click"/>
        <Label Content="Radius" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbSquare" Content="Square" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbLenght" Content="Lenght" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top"/>

    </Grid>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFBCC6B3" Offset="0.005"/>
            <GradientStop Color="#FFBEEE92" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
</Window>
